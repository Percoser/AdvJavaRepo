<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import com.jfoenix.controls.JFXChipView?>
<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" >

    <VBox>
        <ListView fx:id="employeeListView"/>
        <VBox>
            <Button fx:id="deleteButton" text="Delete Selected"/>
        </VBox>
    </VBox>
    <VBox>
        <HBox>
            <Label text="First Name: " prefWidth="100"/>
            <TextField prefWidth="150" fx:id="fNameText"/>

        </HBox>
        <HBox>
            <Label text="Last Name: " prefWidth="100"/>
            <TextField prefWidth="150" fx:id="lNameText"/>

        </HBox>
        <HBox>
            <Label text="Is Active: " prefWidth="100"/>
            <CheckBox fx:id="isActiveCheckBox"/>

        </HBox>
        <HBox>
            <Label text="Misc. : " prefWidth="100"/>
            <TextField prefWidth="150" fx:id="miscText"/>

        </HBox>
        <HBox>
            <Button fx:id="clearButton" text="Clear Fields"/>
            <Button fx:id="addButton" text="Add New"/>
        </HBox>
        <HBox>
            <Button fx:id="fireButton" text="Deactivate Employee"/>
            <Button fx:id="hireButton" text="Activate Employee"/>
        </HBox>
    </VBox>


</HBox>